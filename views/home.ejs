<html>
    <head>
      <title>My TODo List</title>
      <script src="https://kit.fontawesome.com/ce928e5e05.js" crossorigin="anonymous"></script>
      <link rel="stylesheet" type="text/css" href="/css/home.css">
    </head>
    <body>
        <h1 id = "page-heading">TO-DO LIST</h1>
        <div id = "sheet">
       

        <div id = "forms">
            <form action = "/add-task" method = "POST">
            <input type = "text" name = "description" placeholder="What do you need to do?">
            <div class="flex-container">
                <div class="flex-child">
                    <div class="select_categories">
                    <div class="select">
            <select name = "category" id = "search_categories">
                <option value="Select category"  selected="selected">Select Category</option>
                <option value = "Personal" >Personal</option> 
                <option value = "Work" >Work</option>
                <option value = "Other" >Other</option>
            </select>
            </div>
        </div>
        </div>

            <div class="flex-child">
            <input  type = "date" name = "date" placeholder= " Due Date: mm/dd/yyyy">
            </div>
            </div>

            <div class="buttons">

                <!--Add Task-->
                
                
            <button id = "add" type = "submit"><i class="fas fa-plus"></i>Add Task</button>
           

        
            
            
            
        </form>
        </div>
        <hr>


        <!--Display-->
        <div id = "display">
            <ul id = "things_list">
                <% for(let i of things){ %>
                    <li>


                        <!--Display Of description-->

                        <div id = "description_disp">

                        <p><%= i.description%></p>
                    </div>

                       <!--Display Of date-->
                       <div id = "date_disp">
                        <p><i class="far fa-calendar-alt"></i><%= i.date %></p>
                        </div>

                        <!--Display of Category-->

                        <div id = "category_disp">
                        <p>
                        <% if(i.category == "Personal"){%>
                        
                            <button id = "orange" type="submit"><%=i.category%></button>
                        
                        
                       

                       <% } else if(i.category == "Work") {%>
                        
                            <button id = "blue" type="submit"><%=i.category%></button>
                        

                        <% } else if(i.category=="Other"){%>
                        
                            <button id = "green" type="submit"><%=i.category%></button>
                        
                        <%}%>
                        
                        </p>
                    </div>

                    <!--Delete button functionality-->

                    <div class="del_but">

                        <a href="/delete-task/?id=<%= i._id %>  ">
                            <i class="fas fa-trash"></i>
                        </a>
                        </div> 

   <hr>
                    </li>
                    
                    <%}%>
                  


            </ul>
            
        </div>
        <hr>

        </div>

    </body>
</html>
